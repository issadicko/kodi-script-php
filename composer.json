    "type": "library",
    "license": "MIT",
    "keywords": [
        "scripting",
        "interpreter",
        "dsl",
        "embedded",
        "script",
        "language",
        "parser",
        "expression",
        "sandbox"
    ],
    "authors": [
        {
            "name": "Issa Hamadou Dicko",
            "email": "issadicko78@gmail.com"
        }
    ],
    "homepage": "https://github.com/issadicko/kodi-script-php",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "KodiScript\\": "src/"
        },
        "files": [
            "src/Ast/Nodes.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KodiScript\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}